<html>
<head>
  <style>
  .hori{
    float: left;
    width: 50%;
    text-align: center;
  }
  </style>
  <script type="text/javascript">
  	function sub(event) {
  		if(document.getElementById('username').value==""|document.getElementById('password').value=="")
  			alert("Please fill in your info");
  		else
  			document.forms[0].submit();
  	}
  </script>
</head>
<body style="position:absolute; top:25%; left:25%">
<form method="POST">
  <div>
    <label class="hori">Username</label>
    <input type="text" class="hori" id="username" name="username">
  </div>
  <br><br>
  <div>
    <label class="hori">Password</label>
    <input type="password" class="hori" id="password" name="password">
  </div>
  <br><br>
  <input type="button" onclick="sub()" value="Login" class="hori">
  <label style="color: red"><%if(locals.error){%><%="Failed to login"%><%}%></label>
 </form>
</body>
</html>
